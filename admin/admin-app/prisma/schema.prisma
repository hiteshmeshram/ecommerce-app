generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int @id @default(autoincrement())
  name      String? 
  email     String  @unique
  password  String
  role      Role
  procuct   Product[]
}
enum Role {
  admin
  client
}

model Product {
  id            Int @id @default(autoincrement())
  name          String
  description   String
  price         Int
  imageurl      String
  userId        Int 
  user  User  @relation(fields: [userId],references: [id])
  category Category[]
}

model Category {
  id                Int @id @default(autoincrement())
  procuctCategory   ProcuctCategory
  color             String
  size              Int
  procuctId         Int 
  Procuct           Product @relation(fields: [procuctId],references: [id])
}

enum ProcuctCategory {
  mobile
  laptop 
  headset
}